<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.argus-ide</groupId>
    <artifactId>org.argus-ide.cit.build</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <relativePath>../org.argus-ide.cit.build/pom.xml</relativePath>
  </parent>
  <artifactId>org.argus-ide.cit.aspects</artifactId>
  <packaging>eclipse-plugin</packaging>

  <build>
    <plugins>
      <plugin>
        <!-- do not use maven repositories to resolve the dependencies, only p2 -->
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>target-platform-configuration</artifactId>
        <configuration>
          <resolver>p2</resolver>
          <pomDependencies>ignore</pomDependencies>
        </configuration>
      </plugin>
      <plugin>
        <!-- have the tycho compiler skip the aspect files -->
        <groupId>org.eclipse.tycho</groupId>
        <artifactId>tycho-compiler-plugin</artifactId>
        <configuration>
          <excludeResources>
            <exludeResource>**/*.aj</exludeResource>
          </excludeResources>
        </configuration>
      </plugin>
      <plugin>
        <!-- compile the aspect files -->
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>aspectj-maven-plugin</artifactId>
        <executions>
          <execution>
            <phase>process-sources</phase>
            <id>compile</id>
            <configuration>
              <source>1.5</source>
              <target>1.5</target>
              <complianceLevel>1.5</complianceLevel>
              <aspectDirectory>src</aspectDirectory>
              <Xlint>ignore</Xlint>
              <deprecation>true</deprecation>
            </configuration>
            <goals>
              <goal>compile</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

      <!-- added source folder containing the code specific to the Eclipse version -->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <version>1.7</version>
        <executions>
          <execution>
            <phase>generate-sources</phase>
            <goals><goal>add-source</goal></goals>
            <configuration>
              <sources>
                <source>src-${eclipse.codename}</source>
              </sources>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>